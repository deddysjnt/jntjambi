
<%= simple_form_for @dpbagging, wrapper: :horizontal_form do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :kegiatan %>
    <%= f.input :tanggal %>
    <%= f.input :bagging_id %>
    <%= f.input :noref %>
    <%= f.input :droppoint_asal %>
    <%= f.input :kg_asal %>
    <%= f.input :awb_asal %>
    <%= f.input :tanggal_kirim %>
    <%= f.input :manifest_id %>
    <%= f.input :tanggal_terima %>
    <%= f.input :droppoint_terima %>
    <%= f.input :kg_terima %>
    <%= f.input :awb_terima %>
    <%= f.input :selisih_kg %>
    <%= f.input :selisih_awb %>
    <%= f.input :fresh_paket %>
    <%= f.input :description %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
