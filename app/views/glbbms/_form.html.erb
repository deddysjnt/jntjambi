<div class="row">
<div class="col-md-12">
<div class="card text-white bg-dark card-border-color card-border-color-primary">
	<div class="card-header card-header-divider"><span class="card-subtitle">Biaya BBM (Entry/Edit)</span></div>
<div class="card-body">
	<%= form_for @glbbm do |j| %>
	  <% if @glbbm.errors.any? %>
	  	<% @glbbm.errors.full_messages.each do |pesan| %>
	  		<div class = "row alert alert-danger"><%= pesan %></div>
	  	<% end %>
	  <% end %>
	  
	  <div class="row">
	  	<div class="col-6">
	  	  <div class="field">
		  	<%= j.label :Tanggal %>
		  	<%= j.text_field :tanggal, class: 'form-control datepicker' , type: 'text', autofocus: true%>
		  </div>	  			  		
	  	</div>
	  </div>
	  <div class="row">
	  	<div class="col-6">
		  <div class="field">
		  	<%= j.label :Nomor_polisi %>
		  	<%= j.text_field :nopol, class: 'form-control kendaraan' , type: 'text', autofocus: true %>
		  </div>	  		
	  	</div>
	  </div>
	  <div class="row">
	  	<div class="col-6">
		  <div class="field">
		  	<%= j.label :Sopir %>
		  	<%= j.text_field :nama_karyawan, class: 'form-control karyawan' , type: 'text', autofocus: true %>
		  </div>	  		
	  	</div>
	  </div>
	  <div class="row">
	  	<div class="col-6">
		  <div class="field">
		  	<%= j.label :Droppoint %>
		  	<%= j.text_field :nama_dp, class: 'form-control droppoint' , type: 'text', autofocus: true %>
		  </div>	  		
	  	</div>	  	
	  </div>
	<div class="dropdown-divider"></div>
	  <div class="row">
	  	<div class="col">
		  <div class="field">
		  	<%= j.label :Jenis_BBM %>
		  	<%= j.select(:jenis_bbm, S3var::JENIS_BBM,{},{class: "input-group-prepend custom-select", autofocus: true}) %>
		  </div>	  		
	  	</div>	  		  	
	  	<div class="col">
		  <div class="field">
		  	<%= j.label :Km_Isi %>
		  	<%= j.text_field :km_baru, class: 'form-control' , type: 'text', autofocus: true %>
		  </div>	  		
	  	</div>
	  	<div class="col">
		  <div class="field">
		  	<%= j.label :Liter %>
		  	<%= j.text_field :liter, class: 'form-control' , type: 'number', autofocus: true %>
		  </div>	  		
	  	</div>
	  	<div class="col">
		  <div class="field">
		  	<%= j.label :Total %>
		  	<%= j.text_field :biaya_bbm, class: 'form-control' , type: 'number', autofocus: true %>
		  </div>	  		
	  	</div>	  
	  	<div class="col">
		  <div class="field">
		  	<%= j.label :ID_Kasir %>
		  	<%= j.text_field :perkiraan_id, class: 'form-control perkiraan' , type: 'text', autofocus: true %>
		  </div>	  		
	  	</div>
	  </div>	  
	  <div class="dropdown-divider"></div>	  
	  <br>
	  <div class="row">
	    <div class="col-7 dropdown-divider divider"></div>
	    <div class="col-sm"><%= j.submit "Simpan Data", class: $s3sukses, autofocus: true %></div>
	    <div class="col-sm"><%= link_to "Batal", glbbms_path,class: $s3blue %></div>
	  </div>
	<% end %>
</div>
</div>
</div>
</div>