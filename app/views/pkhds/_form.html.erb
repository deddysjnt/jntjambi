<%= simple_form_for @pkhd, wrapper: :horizontal_form do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :droppoint_id %>
    <%= f.input :nomor %>
    <%= f.input :no_ref %>
    <%= f.input :tanggal, label: false %>
    <%= f.input :description %>
  </div>
  <table class="table">
    <thead>
      <tr>
        <th></th>
        <th>Id</th>
        <th>Nama Barang</th>
        <th>Gudang</th>
        <th>Qty</th>
        <th>Keterangan</th>
      </tr>
    </thead>
    <tbody class="fields">
      <%= f.simple_fields_for :pkdts do |builder| %>
        <%= render 'pkdt', f: builder %>
      <% end %>
      
    </tbody>
  </table>
  <div class="form-actions">
    <button id="submit" name="submit" class= "<%= $s3sukses %>" >Simpan Data</button>
    <%#= f.button :submit %>
    <%= link_to_add_row('Buat Pemakaian', f, :pkdts, class: $s3red) %>
  </div>
<% end %>
