<p id="notice"><%= notice %></p>

<h1>Pkhds</h1>

<div class="table-responsive-sb">
<table class="table table-bordered table-hover">
  <thead class="thead-light">
    <tr>
      <th>Droppoint</th>
      <th>Nomor</th>
      <th>No ref</th>
      <th>Tanggal</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pkhds.each do |pkhd| %>
      <tr>
        <td><%= pkhd.droppoint_id %></td>
        <td><%= pkhd.nomor %></td>
        <td><%= pkhd.no_ref %></td>
        <td><%= pkhd.tanggal %></td>
        <td><%= pkhd.description %></td>
        <td><%= link_to 'Show', pkhd %></td>
        <td><%= link_to 'Edit', edit_pkhd_path(pkhd) %></td>
        <td><%= link_to 'Destroy', pkhd, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

<br>

